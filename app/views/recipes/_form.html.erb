<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |attr| %>
    <%= attr.label :name %>
    <%= attr.text_field :name %><br>

    <%= attr.label :quantity %>
    <%= attr.text_field :quantity %><br>

  <% end %>

  <%= f.submit %>
  
<% end %>
